<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!--大于DEBUG级别的进行日志输出到tomcat下logs里的catalina.log-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoding>UTF-8</encoding>
        <!--日志格式-->
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%p][%c{40}][%t] %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <!--项目日志-->
    <appender name="mmall" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--本地路径-->
        <File>C:/apache-tomcat-7.0.75/logs/mmall.log</File>
        <!--linux服务器路径-->
        <!--<File>/usr/local/apache-tomcat-7.0.73/logs/mmall.log</File>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>C:\apache-tomcat-7.0.75\logs/mmall.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!--<fileNamePattern>/usr/local/apache-tomcat-7.0.73/logs/mmall.log.%d{yyyy-MM-dd}.gz</fileNamePattern>-->
            <append>true</append>
            <!--日志存储最大时间10天-->
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <!--日志格式-->
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%p][%c{40}][%t] %m%n</pattern>
        </encoder>
    </appender>

    <!--error级别的日志输出-->
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--本地路径-->
        <File>C:/apache-tomcat-7.0.75/logs/error.log</File>
        <!--linux服务器路径-->
        <!--<File>/usr/local/apache-tomcat-7.0.73/logs/error.log</File>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>C:\apache-tomcat-7.0.75\logs/error.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!--<fileNamePattern>/usr/local/apache-tomcat-7.0.73/logs/error.log.%d{yyyy-MM-dd}.gz</fileNamePattern>-->
            <append>true</append>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%p][%c{40}][%t] %m%n</pattern>
        </encoder>
        <!--设置级别为error的接受，不是的则拒绝-->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!--将com.mmall下的输出日志设置为INFO级别，日志输出为mmall和console相关配置-->
    <!--additivity为false是不向上继承-->
    <logger name="com.mmall" additivity="false" level="INFO">
        <appender-ref ref="mmall"></appender-ref>
        <appender-ref ref="console"></appender-ref>
    </logger>

    <!--将dao下的设置为DEBUG级别，这样可以在日志中看到想看的sql语句-->
    <logger name="com.mmall.dao" level="DEBUG"></logger>

    <!--<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="DEBUG" >-->
    <!--<appender-ref ref="console"/>-->
    <!--</logger>-->

    <!--<logger name="java.sql.Connection" level="DEBUG">-->
    <!--<appender-ref ref="console"/>-->
    <!--</logger>-->
    <!--<logger name="java.sql.Statement" level="DEBUG">-->
    <!--<appender-ref ref="console"/>-->
    <!--</logger>-->

    <!--<logger name="java.sql.PreparedStatement" level="DEBUG">-->
    <!--<appender-ref ref="console"/>-->
    <!--</logger>-->

    <!--根节点设置为DEBUG级别-->
    <root level="DEBUG">
        <appender-ref ref="console"/>
        <appender-ref ref="error"/>
    </root>
</configuration>